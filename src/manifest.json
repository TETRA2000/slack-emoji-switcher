{
  "manifest_version": 2,

  "name": "Slack Emoji Switcher",
  "description": "This extension allows the user to change emoji in the slack page.",
  "version": "1.0",

  "browser_action": {
    "default_icon": "icon.png",
    "default_popup": "popup.html"
  },
  "permissions": [
    "activeTab",
    "tabs", "https://*.slack.com/*",
    "storage"
  ],
  "content_scripts": [
    {
      "matches": ["https://*.slack.com/*"],
      "js": ["changeemoji.js"]
    }
  ]
}
